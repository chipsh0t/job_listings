@{
    ViewData["Title"] = "Home Page";
}
@model IEnumerable<JobListingsWeb.Models.JobViewModel>

<!-- start banner Area -->
			<section class="banner-area relative" id="home">	
				<div class="overlay overlay-bg"></div>
				<div class="container">
					<div class="row fullscreen d-flex align-items-center justify-content-center">
						<div class="banner-content col-lg-12">
							<h1 class="text-white">
								<span>1500+</span> Jobs posted last week				
							</h1>	
							<form class="serach-form-area" asp-controller="Jobs" asp-action="SearchByName" method="get">
								<div class="row justify-content-center form-wrap">
									<div class="col-lg-4 form-cols">
										<input type="text" class="form-control" name="search" placeholder="what are you looking for?" autocomplete="off">
									</div>
									<div class="col-lg-2 form-cols">
										<input type="submit" class="btn btn-info" value="Search" />
									</div>								
								</div>
							</form>	
						</div>		 									
					</div>
				</div>
			</section>
			<!-- End banner Area -->	

			<!-- Start features Area -->
			<section class="features-area">
				<div class="container">
					<div class="row">
						<div class="col-lg-3 col-md-6">
							<div class="single-feature">
								<h4>Searching</h4>
								<p>
									Lorem ipsum dolor sit amet, consectetur adipisicing.
								</p>
							</div>
						</div>
						<div class="col-lg-3 col-md-6">
							<div class="single-feature">
								<h4>Applying</h4>
								<p>
									Lorem ipsum dolor sit amet, consectetur adipisicing.
								</p>
							</div>
						</div>
						<div class="col-lg-3 col-md-6">
							<div class="single-feature">
								<h4>Security</h4>
								<p>
									Lorem ipsum dolor sit amet, consectetur adipisicing.
								</p>
							</div>
						</div>
						<div class="col-lg-3 col-md-6">
							<div class="single-feature">
								<h4>Notifications</h4>
								<p>
									Lorem ipsum dolor sit amet, consectetur adipisicing.
								</p>
							</div>
						</div>																		
					</div>
				</div>	
			</section>
			<!-- End features Area -->
			
			<!-- Start feature-cat Area -->
			<section class="feature-cat-area pt-100" id="category">
				<div class="container">
					<div class="row d-flex justify-content-center">
						<div class="menu-content pb-60 col-lg-10">
							<div class="title text-center">
								<h1 class="mb-10">Featured Job Categories</h1>
								<p>Who are in extremely love with eco friendly system.</p>
							</div>
						</div>
					</div>						
					<div class="row">
						@for(var i=0; i<ViewBag.Categories.Count; i++)
						{
							<div class="col-lg-2 col-md-4 col-sm-6">
								<div class="single-fcat">
									<img src="~/img/o@(i+1).png" alt="">
									<p>@ViewBag.Categories[i]</p>
								</div>
							</div>
						}
					</div>
				</div>	
			</section>
			<!-- End feature-cat Area -->
			
			<!-- Start post Area -->
			<section class="post-area section-gap">
				<div class="container">
					<div class="row justify-content-center d-flex">
						<div class="col-lg-8 post-list">
							@*render job listing cards*@ 
							@foreach(var job_listing in Model)
							{
								@await Html.PartialAsync("JobCard",job_listing)
							}
						</div>
						<div class="col-lg-4 sidebar">
							<div class="single-slidebar">
								<h4>Jobs by Location</h4>
								<ul class="cat-list">
									@foreach(var location in ViewBag.Locations)
									{
										<li class="justify-content-between d-flex"><p>@location</p></li>
									}
								</ul>
							</div>
							<div class="single-slidebar">
								<h4>Jobs by Category</h4>
								<ul class="cat-list">
									@foreach(var category in ViewBag.Categories)
									{
										<li class="justify-content-between d-flex"><p>@category</p></li>
									}
								</ul>
							</div>
						</div>
					</div>
				</div>	
			</section>
			<!-- End post Area -->